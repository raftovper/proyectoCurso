<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
xmlns:gap = "http://phonegap.com/ns/1.0"
id        = "com.example.starwarscoffee"
version   = "1.0.0">

	<name>StarWars Coffee</name>
	<description>Final Project for an HTML5 course</description>
	<author href="https://github.com/raftovper/" email="tovarpereira@gmail.com">Rafael Tovar</author>

	<!-- Define app icon for each platform. -->
	<icon src="icon.png" />
	<icon src="res/icon/icon.png"   gap:platform="android"    gap:density="ldpi" />
	<icon src="res/icon/icon.png"   gap:platform="android"    gap:density="mdpi" />
	<icon src="res/icon/icon.png"   gap:platform="android"    gap:density="hdpi" />
	<icon src="res/icon/icon.png"  gap:platform="android"    gap:density="xhdpi" />

	<!-- Define app splash screen for each platform. -->
	<gap:splash src="res/screen/splash.png"  gap:platform="android" gap:density="ldpi" />
	<gap:splash src="res/screen/splash.png"  gap:platform="android" gap:density="mdpi" />
	<gap:splash src="res/screen/splash.png"  gap:platform="android" gap:density="hdpi" />
	<gap:splash src="res/screen/splash.png" gap:platform="android" gap:density="xhdpi" />

	<!--
	Define access to external domains.

	<access />            - a blank access tag denies access to all external resources.
	<access origin="*" /> - a wildcard access tag allows access to all external resource.

	Otherwise, you can specify specific domains:
	-->
	<access origin="*"/>
	<!-- allow local pages -->
	<!--<content src="https://github.com/raftovper/pruebaCurso/blob/master/truecar/index.html" />-->

</widget>
